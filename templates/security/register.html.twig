{% include 'global/header.html.twig' with {"title":"Inscription"} only %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-50 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h3 class="card-title text-center mb-5 fw-light fs-5">Inscrivez-vous</h3>

                        <form method="POST" >
                            <h3>Création de compte avec vos informations MyGes</h3>
                            <div class="form-floating mb-4">
                                <label for="name">Login</label>
                                <input type="text" name="login" class="form-control my-input">
                            </div>
                            <div class="form-floating mb-4">
                                <label for="firstname">Mot de passe</label>
                                <input type="password" name="mdp" class="form-control my-input">
                            </div>
                            <br><br>
                            <h3>Création de compte sans MyGes</h3>
                            <div class="form-floating mb-4">
                                <input type="text" name="name" class="form-control my-input" id="name" placeholder="Nom">
                            </div>
                            <div class="form-floating mb-4">
                                <input type="text" name="firstname" class="form-control my-input" id="firstname" placeholder="Prénom">
                            </div>
                            <div class="form-floating mb-4">
                                <input type="email" name="email" class="form-control my-input" placeholder="E-Mail">
                            </div>
                            <div class="form-floating mb-4">
                                <input type="date" name="birthDate" class="form-control my-input" id="birthDate" placeholder="Date de Naissance">
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" name="password"  class="form-control my-input" id="name" placeholder="Mot de Passe">
                            </div>    
                            <div class="form-floating mb-4">
                                <h4 class="text-norm">Roles: </h4>
                                <label for="student">Étudiant:</label>
                                <input type="radio" name="role"  class="form-control my-input" value="1" id="student" checked>
                                <label for="bde">BDE:</label>
                                <input type="radio" name="role"  class="form-control my-input" value="2" id="bde">
                            </div>  
                            <div class="text-center" >
                                <button class="btn btn-primary btn-lg btn-block" type="submit" name="submit">S'inscrire
                                </button>
                            </div>
                            <hr class="my-4">
                            <div class="text-norm text-center">
                                Déjà inscrit? <a href="/">ici</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>       
{% include 'global/footer.html.twig' %}

  <div class="col-md-3">
  <h3> Gestion des Catégories</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nom de la catégorie</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}

                <form id="tableau">
